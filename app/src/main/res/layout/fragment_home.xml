<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/search_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/login_edittext"
        android:drawableEnd="@drawable/ic_action_mic"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:drawableRight="@drawable/ic_action_mic"
        android:drawableStart="@drawable/ic_search"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/search_msg"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/dark_gray"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/home_img_slider"
                android:layout_width="match_parent"
                android:layout_height="130dp" />

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="@dimen/space_6"
                android:text="@string/shop_category_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/space_18" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/lite_gray"></View>

            <ImageView
                android:id="@+id/add_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--     <android.support.design.widget.TabLayout
                     android:id="@+id/tabLayout"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     />

                 <android.support.v4.view.ViewPager
                     android:id="@+id/masterViewPager"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@color/lite_gray"/>-->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="@dimen/space_6"
                android:text="@string/bestseller"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/space_18" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_bestproducts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="12dp" />

            <ImageView
                android:id="@+id/add_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="@dimen/space_6"
                android:text="@string/this_weeks_offers"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/space_18" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_offers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="12dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="@dimen/space_6"
                android:text="@string/popular_brands"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/space_18" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_popularbrands"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="12dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>